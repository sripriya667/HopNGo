
<% layout("/layouts/boilerplate") -%> 

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .filter {
    text-align: center;
    margin-top: 2rem;
    margin-right: 2rem;
    opacity: 0.8;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .filter {
  text-decoration: none; /* remove underline from links */
  color: inherit;        /* inherit text color so no default blue */
}

.filter div {
  font-size: 1rem;     /* adjust icon size as needed */
}

.filter p {

  font-size: 0.8rem;
}

  .tax-info{
    display: none;
  }
  .tax-toggle {
    border: 2px solid black;
    padding: 0.5rem;
    border-radius: 1rem;
    margin-left: 5rem;
    height: 3rem;
    display: flex;
    align-items: center;
  }
  
@media (max-width: 768px) {
  .filter {
    flex: 0 0 22%;
    max-width: 22%;
    margin: 4px;
    font-size: 0.7rem;
  }

  .listing-card {
    max-width: 90%;
  }
}

@media (max-width: 480px) {
  .filter {
    flex: 0 0 22%;
    max-width: 22%;
    margin: 2px;
    font-size: 0.65rem;
  }

  .listing-card {
    max-width: 95%;
  }
}  
.tax-toggle {
    margin-top: 1rem;
  }

   @media (max-width: 575.98px) {
    .tax-toggle {
      display: none !important;
    }
  }

    .tax-toggle .form-check-input {
      transform: scale(0.8);
      margin-right: 0.5rem;
    }

    .tax-toggle {
      text-align: left;
      padding: 0 1rem;
    }

</style>
<div id="filters">
  <a href="/listings/filter/trending" class="filter"><div><i class="fa-solid fa-fire"></i></div><p>Trending</p></a>
  <a href="/listings/filter/rooms" class="filter"><div><i class="fa-solid fa-bed"></i></div><p>Rooms</p></a>
  <a href="/listings/filter/iconiccities" class="filter"><div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic Cities</p></a>
  <a href="/listings/filter/mountains" class="filter"><div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p></a>
  <a href="/listings/filter/castles" class="filter"><div><i class="fa-brands fa-fort-awesome"></i></div><p>Castles</p></a>
  <a href="/listings/filter/amazingpools" class="filter"><div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing Pools</p></a>
  <a href="/listings/filter/camping" class="filter"><div><i class="fa-solid fa-campground"></i></div><p>Camping</p></a>
  <a href="/listings/filter/farms" class="filter"><div><i class="fa-solid fa-cow"></i></div><p>Farms</p></a>
  <a href="/listings/filter/arctic" class="filter"><div><i class="fa-regular fa-snowflake"></i></div><p>Arctic</p></a>
  <a href="/listings/filter/domes" class="filter"><div><i class="fa-solid fa-igloo"></i></div><p>Domes</p></a>
  <a href="/listings/filter/boats" class="filter"><div><i class="fa-solid fa-ship"></i></div><p>Boats</p></a>


  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>
    <div class="row row-cols-ls-3 row-cols-md-3 row-cols-sm-1 mt-3">
           <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing.id%>" class="listing-link">
              
        <div class="card col-10 offset-1 show-card listing-card">

<% if (listing.images && listing.images.length > 0) { %>
  <img src="<%= listing.images[0].url %>"  class="card-img-top" alt="listing_image" style="width: 100%; height: 20rem; object-fit: cover; border-radius: 8px;">
<% } else { %>
  <img src="/default.jpg" class="card-img-top" alt="No image available"> <!-- Optional fallback -->
<% } %>
            <div class="card-img-overlay"></div>
        <div class="card-body">
        <p class="card-text">
  <b><%= listing.title %> </b> <br>
  <% if (listing.price !== undefined) { %>
    &#x20B9;<%= listing.price.toLocaleString("en-IN") %> / night
  <% } else { %>
    Price not available
  <% } %>
  <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
</p>
    </div>
    </div>
    </a>
     <% } %>
    </div>  

<script>
  const taxSwitch = document.getElementById('flexSwitchCheckDefault');
  taxSwitch .addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){
      info.style.display = "inline";
    }
      else{
        info.style.display = "none";
      }
    }
})
</script>