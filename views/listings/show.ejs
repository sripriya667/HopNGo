<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-3">

    <h3>Listing Details </h3>
    </div>
    <div class="card col-6 offset-3 show-card">
    <img src="<%=listing.image%>" class="card-img-top show-img" alt="listing-image">
     <div class="card-body">
    <p class="card-text">
        <li><b> <%= listing.title %> </b></li>
        <li> <%= listing.description %> </li>
        <li> &#x20B9; <%= listing.price.toLocaleString("en-IN") %> </li>
        <li> <%= listing.location %> </li>
        <li> <%= listing.country %> </li>
    </p>
  </div>
  </div>
  <div class="btns">
    <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark col-1 offset-3">Edit</a>

    <form method="POST" action="/listings/<%=listing.id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>
</div>

